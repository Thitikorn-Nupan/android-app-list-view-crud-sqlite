<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:id="@+id/constraintMain"
                                                   android:layout_height="match_parent">
    <TextView
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:textSize="40dp"
            android:text="Detail Employee"
            android:textColor="@color/black"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTitle"
            app:layout_constraintTop_toTopOf="@+id/constraintMain"/>

    <com.google.android.material.card.MaterialCardView
            android:clickable="true"
            android:focusable="true"
            style="?attr/materialCardViewFilledStyle"
            app:layout_constraintTop_toBottomOf="@id/textViewTitle"
            app:cardBackgroundColor="#2DB3B3B3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="20dp"
            android:id="@+id/cardView">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

            <LinearLayout
                    android:layout_width="450dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Employee Id"
                            android:textSize="24sp"/>

                    <EditText
                            android:id="@+id/editTextEmployeeId"
                            android:enabled="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textShortMessage"
                            android:textSize="24sp"
                            android:singleLine="true"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fullname"
                            android:textSize="24sp"/>

                    <EditText
                            android:id="@+id/editTextEmployeeFullname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textShortMessage"
                            android:textSize="24sp"
                            android:layout_marginLeft="5dp"
                            android:enabled="false"

                            android:singleLine="true"/>

                </LinearLayout>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Age"
                            android:textSize="24sp"/>

                    <EditText
                            android:layout_marginLeft="60dp"
                            android:id="@+id/editTextEmployeeAge"
                            android:enabled="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textSize="24sp"
                            android:singleLine="true"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gender"
                            android:textSize="24sp"/>

                    <EditText
                            android:layout_marginLeft="25dp"
                            android:id="@+id/editTextEmployeeGender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textShortMessage"
                            android:enabled="false"
                            android:textSize="24sp"
                            android:singleLine="true"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Position"
                            android:textSize="24sp"/>

                    <EditText
                            android:layout_marginLeft="10dp"
                            android:enabled="false"
                            android:id="@+id/editTextEmployeePosition"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textShortMessage"
                            android:textSize="24sp"
                            android:singleLine="true"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Salary"
                            android:textSize="24sp"/>

                    <EditText
                            android:layout_marginLeft="30dp"
                            android:id="@+id/editTextEmployeeSalary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:enabled="false"
                            android:textSize="24sp"
                            android:singleLine="true"/>


                </LinearLayout>

                <CheckBox
                        style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                        android:id="@+id/checkBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Want to Edit"
                        app:layout_constraintStart_toStartOf="parent"
                        />
                <com.google.android.material.button.MaterialButton
                        android:id="@+id/button"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_gravity="center"
                        android:letterSpacing="0.5"
                        android:text="update"
                        android:textAllCaps="true"/>


            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>